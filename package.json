{
    "name": "geminid",
    "author": "Sehi L'Yi",
    "version": "0.0.9",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/sehilyi/geminid"
    },
    "homepage": "https://sehilyi.github.io/geminid/",
    "main": "dist/geminid.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "start": "webpack-dev-server --mode development --config webpack.config.editor.js",
        "build": "webpack --mode production",
        "build-log": "yarn build --display-error-details",
        "build-editor": "webpack --mode production --config webpack.config.editor.js",
        "test": "jest test/",
        "format": "eslint . --fix && prettier '**/*.css' --write",
        "schema": "mkdir -p schema & ts-json-schema-generator -p src/core/geminid.schema.ts -f tsconfig.json -t GeminidSpec > schema/geminid.schema.json",
        "predeploy": "yarn build-editor",
        "deploy": "gh-pages -d build"
    },
    "peerDependencies": {},
    "dependencies": {
        "@types/d3": "^5.7.2",
        "@types/lodash": "^4.14.151",
        "@types/node": "^12.0.0",
        "@types/uuid": "^8.3.0",
        "d3": "^5.16.0",
        "d3-array": "^2.5.1",
        "d3-dsv": "^2.0.0",
        "d3-scale": "^3.2.1",
        "file-loader": "^6.0.0",
        "gh-pages": "^2.2.0",
        "higlass": "^1.11.3",
        "higlass-register": "^0.3.0",
        "json-stringify-pretty-compact": "^2.0.0",
        "lodash": "^4.17.15",
        "mixwith": "^0.1.1",
        "pixi.js": "^5.3.3",
        "strip-json-comments": "^3.1.1"
    },
    "devDependencies": {
        "@babel/core": "^7.11.1",
        "@babel/preset-env": "^7.11.0",
        "@babel/preset-react": "^7.10.4",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@testing-library/jest-dom": "^5.11.3",
        "@testing-library/react": "^10.4.8",
        "@testing-library/user-event": "^12.1.1",
        "@types/jest": "^26.0.10",
        "@types/qs": "^6.9.5",
        "@types/react": "^16.9.46",
        "@types/react-dom": "^16.9.8",
        "@types/react-resize-detector": "^4.2.0",
        "@types/react-router-dom": "^5.1.6",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "ajv": "^6.12.2",
        "babel-jest": "^26.3.0",
        "cross-fetch": "^3.0.6",
        "css-loader": "^4.2.1",
        "documentation": "^13.0.2",
        "eslint": "^7.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jest": "^23.20.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.6",
        "html-webpack-plugin": "^4.3.0",
        "husky": "^4.2.5",
        "jest": "^26.4.0",
        "monaco-editor-webpack-plugin": "^1.9.0",
        "peer-deps-externals-webpack-plugin": "^1.0.4",
        "postcss-loader": "^3.0.0",
        "prettier": "^2.0.5",
        "qs": "^6.9.4",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-monaco-editor": "^0.36.0",
        "react-resize-detector": "^4.2.3",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.1",
        "react-split-pane": "^0.1.91",
        "style-loader": "^1.2.1",
        "ts-jest": "^26.2.0",
        "ts-json-schema-generator": "^0.75.0",
        "ts-loader": "^8.0.2",
        "typescript": "~4.1.2",
        "webpack": "^4.44.1",
        "webpack-bundle-analyzer": "^3.8.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "verbose": true,
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "coverageDirectory": "./coverage/",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "**/src/**/*.{js,ts}",
            "!**/node_modules/**",
            "!**/coverage/**",
            "!**/public/**",
            "!**/dist/**",
            "!**/editor/**",
            "!**/deprecated/**"
        ],
        "coverageReporters": [
            "lcov",
            "text"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn schema && yarn format && git add .",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
